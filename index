    <script>
        const noBtn = document.getElementById('noBtn');

        function moveButton() {
            // Screen boundaries
            const padding = 100;
            const maxX = window.innerWidth - noBtn.offsetWidth - padding;
            const maxY = window.innerHeight - noBtn.offsetHeight - padding;

            // Random coordinates within the screen
            const newX = Math.random() * maxX + (padding / 2);
            const newY = Math.random() * maxY + (padding / 2);

            noBtn.style.position = 'fixed';
            noBtn.style.left = `${newX}px`;
            noBtn.style.top = `${newY}px`;
            
            // Add a random funny tilt
            const rotation = Math.floor(Math.random() * 60) - 30;
            noBtn.style.transform = `rotate(${rotation}deg)`;
        }

        // The "Chase" trigger
        noBtn.addEventListener('mouseover', moveButton);
        
        // The "Redirect" trigger if they actually manage to click it
        noBtn.addEventListener('click', () => {
            window.location.href = "https://media1.tenor.com/m/-CfhczC_cREAAAAd/angai313-spongebob-sad.gif";
        });

        // For mobile users who try to tap it
        noBtn.addEventListener('touchstart', (e) => {
            e.preventDefault(); 
            moveButton();
        });
    </script>
